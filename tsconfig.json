{
  "compilerOptions": {
    "target": "ES2020",

    "module": "Node16",
    "moduleResolution": "Node16",

    "rootDir": "src",
    "outDir": "dist",

    "declaration": true,

    "strict": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
